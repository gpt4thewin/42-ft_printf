CC = gcc

CFLAGS = -Wall -Wextra -Werror -I $(IDIR) -I $(LIBFT)/includes -g

IDIR = .
SDIR = .
ODIR = obj
LIBFT = libft

NAME = project

DEPS = $(IDIR)/project.h

OBJ = $(patsubst %.c,$(ODIR)/%.o,$(_SRC))

SRC = $(patsubst %,$(SDIR)/%,$(_SRC)))

_SRC =	main.c

.PHONY: all clean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	gcc $^ $(LIBFT)/libft.a -o $@

$(ODIR)/%.o: $(SDIR)/%.c $(DEPS)
	@mkdir -p $(dir $@)
	$(CC) -c -o $@ $< $(CFLAGS)

clean:
	rm -f $(OBJ)

fclean:	clean
	rm -f $(NAME)

re:	fclean all
